<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @AppSettings.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcDemo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@AppSettings.Title</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Database" asp-controller="Home" asp-action="Seed">Seed Database For Development</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="entities" role="button" data-bs-toggle="dropdown" aria-expanded="false">Entities (EN) <span class="caret"></span></a>
                             <ul class="dropdown-menu" aria-labelledby="entities">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="ProductsEntity" asp-action="Index">Products</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="CategoriesEntity" asp-action="Index">Categories</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="StoresEntity" asp-action="Index">Stores</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="models" role="button" data-bs-toggle="dropdown" aria-expanded="false">Models (TR) <span class="caret"></span></a>
                             <ul class="dropdown-menu" aria-labelledby="models">
                                 <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Ürünler (Modal)</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">Kategoriler</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Stores" asp-action="Index">Mağazalar</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ProductsReport" asp-action="Index">Products Report (EN)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FileBrowser" asp-action="Index">File Browser (EN)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/Units.html" target="_blank">Organization Chart</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid" style="text-align: center;">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
